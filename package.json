{
  "name": "task-buttons",
  "displayName": "Simple Task Buttons",
  "description": "Add configurable task buttons to the status bar for quick execution of workspace tasks",
  "keywords": [
    "tasks",
    "status bar",
    "buttons",
    "quick access",
    "workspace",
    "productivity",
    "toolbar",
    "task runner"
  ],
  "version": "1.0.1",
  "publisher": "Condor304",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/condor304/vscode-task-buttons.git"
  },
  "license": "MIT",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "taskButtons.refresh",
        "title": "Refresh Task Buttons"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "18.x",
    "typescript": "^4.9.4"
  }
}